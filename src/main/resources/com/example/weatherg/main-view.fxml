<VBox prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherg.ui.MainController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <HBox style="-fx-background-color: lightGrey; -fx-background-radius: 30;">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/Люля.png" />
                     </image>
                  </ImageView>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="181.0" prefWidth="519.0" spacing="15.0" style="-fx-background-color: pink; -fx-background-radius: 30;">
               <children>
                  <TextField fx:id="searchBar" prefHeight="38.0" prefWidth="375.0" promptText="Начните вводить город">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#onSearchClicked" text="Найти">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
         </padding></HBox>
      <VBox prefHeight="358.4" prefWidth="800.0" spacing="10.0">
         <children>
            <HBox fx:id="currentRow" alignment="CENTER" prefHeight="169.2" prefWidth="200.0" spacing="10.0" />
            <HBox fx:id="forecastRow" alignment="TOP_CENTER" prefHeight="169.2" prefWidth="200.0" spacing="10.0" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
